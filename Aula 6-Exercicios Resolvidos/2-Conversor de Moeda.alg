algoritmo "Conversor de Moedas"
var
      Reais,Dolar: Real
inicio
      Escreval ("----------------------------------")
      Escreval ("    Conversor de Moedas (R$ - U$$)")
      Escreval ("----------------------------------")
      Escreva ("R$ ")
      Leia (Reais)
      Dolar <- Reais / 2.67
      Escreva ("U$$ ",Dolar:4:2)
      
fimalgoritmo
